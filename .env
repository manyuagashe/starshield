# StarShield Prediction Layer Configuration
# Development configuration using SQLite

STARSHIELD_HOST=127.0.0.1
STARSHIELD_PORT=8000
STARSHIELD_DEBUG=true
STARSHIELD_ENABLE_DOCS=true

# CORS and Security
STARSHIELD_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
STARSHIELD_ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Cache Configuration - using SQLite for development
STARSHIELD_CACHE_BACKEND=sqlite
STARSHIELD_CACHE_TTL_SECONDS=21600
STARSHIELD_CACHE_KEY_PREFIX=starshield:

# Rate Limiting
STARSHIELD_RATE_LIMIT_REQUESTS=100
STARSHIELD_RATE_LIMIT_WINDOW_SECONDS=60

# External APIs
STARSHIELD_NASA_API_KEY=DEMO_KEY
STARSHIELD_API_REQUEST_TIMEOUT=30
STARSHIELD_MAX_RETRIES=3
STARSHIELD_RETRY_BACKOFF_FACTOR=2.0

# Data Processing
STARSHIELD_MAX_DATE_RANGE_DAYS=365
STARSHIELD_DEFAULT_PAGE_SIZE=50
STARSHIELD_MAX_PAGE_SIZE=1000

# Circuit Breaker
STARSHIELD_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
STARSHIELD_CIRCUIT_BREAKER_TIMEOUT_SECONDS=60